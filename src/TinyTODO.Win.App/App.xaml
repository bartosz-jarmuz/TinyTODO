<Application x:Class="TinyTODO.App.Windows.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TinyTODO.App.Windows"
             xmlns:localConverters="clr-namespace:TinyTODO.App.Windows.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary >
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ToDoListStyle.xaml"/>
                <ResourceDictionary Source="/Resources/ToDoListItemStyle.xaml"/>
                <ResourceDictionary Source="/Resources/ToDoItemDisplayStyle.xaml"/>
                <ResourceDictionary Source="/Resources/ToDoItemDataTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
